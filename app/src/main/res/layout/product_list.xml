<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/picture_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Name"/>

        <TextView
            android:id="@+id/categoty_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/name_product"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Categoria"/>

        <TextView
            android:id="@+id/description_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/categoty_product"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Descripcion del Producto"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
